{
  "compilerOptions": {
    "target": "ES2020",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "lib": ["es6"],
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@swagger/*": ["./src/swagger/*"],
      "@config/*": ["./src/config/*"],
      "@app/*": ["./src/app/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@services/*": ["./src/services/*"],
      "@test/helper": ["./test/helper"],
    }
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules", "dist"],
}